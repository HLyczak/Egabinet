@model Egabinet.Models.UpdateDoctorViewModel/*asdf@as.pl*/
@{
}
<h1>Edit Doctor</h1>
<form method="post" action="EditDoctor" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Surname</label>
        <input type="text" class="form-control" asp-for="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Adress</label>
        <input type="text" class="form-control" asp-for="Adress">
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Permission Number</label>
        <input type="text" class="form-control" asp-for="PermissionNumber">
        <span asp-validation-for="PermissionNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="Id">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
